---
// Importa el CSS global aquí
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
    integrity="sha384-GvrOXuh7EwEcOtVPVWTi5eePKBbe8yWTP898hW2s45vUmxVtxB9vIsKuHLLHaUCQ"
    crossorigin="anonymous"
  />
	</head>
	<body class="bg-slate-50 text-slate-900 font-sans">
		<nav class="p-6 max-w-4xl mx-auto flex justify-between items-center">
			<a href="/" class="text-2xl font-bold text-indigo-700">⚛️ Physics of Hobbies</a>
			<div class="space-x-4">
				<a href="/" class="hover:text-indigo-600">Inicio</a>
			</div>
		</nav>
		<slot /> <footer class="py-12 text-center text-slate-400 text-sm">
			© {new Date().getFullYear()} - El laboratorio del Físico Maker
		</footer>
	</body>
</html>